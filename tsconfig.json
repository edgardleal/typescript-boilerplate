{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "target": "ES2016",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "dist",
      "esModuleInterop": true
    },
    "typeRoots": [
      "./"
    ],
    "include": ["src/**/*.ts", "index.ts"],
    "exclude": ["node_modules"],
    "compileOnSave": true,
    "buildOnSave": true
  }
  
